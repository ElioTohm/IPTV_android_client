<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="xms.com.smarttv">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-feature
        android:name="android.software.leanback"
        android:required="true" />

    <application
        android:name=".app.SmartTv"
        android:banner="@drawable/xmsprologosmall"
        android:hardwareAccelerated="true"
        android:icon="@drawable/xmsprologosmall"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:launchMode="singleTop"
        android:stateNotNeeded="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.Leanback">
        <activity
            android:name=".UI.MainActivity"
            android:banner="@drawable/xmsprologosmall"
            android:icon="@drawable/xmsprologosmall"
            android:label="@string/app_name"
            android:logo="@drawable/xmsprologosmall"
            android:screenOrientation="landscape" />
        <activity
            android:name=".UI.DetailsActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".UI.BrowseErrorActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".UI.OnboardingActivity"
            android:enabled="true"
            android:exported="true"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.Leanback.Onboarding" />

        <service
            android:name=".services.NotificationService"
            android:exported="false" />

        <activity
            android:name=".Player.TVPlayerActivity"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation"
            android:screenOrientation="landscape" />
        <activity
            android:name=".UI.SplashScreen"
            android:finishOnTaskLaunch="true"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".services.GetInstalledAppService"
            android:exported="false" />

        <activity android:name=".UI.VOD.VODActivity"></activity>
    </application>

</manifest>