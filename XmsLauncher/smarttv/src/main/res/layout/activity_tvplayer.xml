<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="xms.com.smarttv.Player.TVPlayerActivity">

    <com.google.android.exoplayer2.ui.SimpleExoPlayerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/simpleexoplayerview"
        app:use_controller="false"
        app:resize_mode="fill">

    </com.google.android.exoplayer2.ui.SimpleExoPlayerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Main"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginStart="300dp"
        android:layout_height="match_parent"
        android:id="@+id/fragment_container_details"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_vod_list"/>

    <RelativeLayout
        android:id="@+id/fragment_container_purshase"
        android:layout_width="match_parent"
        android:layout_marginLeft="300dp"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true" />


    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:id="@+id/fragment_container_channel"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/ItemDetailFragment"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/channel_number_selector"
        android:layout_width="wrap_content"
        android:layout_height="100dip"
        android:layout_centerInParent="false"
        android:layout_alignParentBottom="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="false"
        android:layout_margin="20dp"
        android:background="@color/BlackTransparent"
        android:text=""
        android:textColor="#FFF"
        android:textSize="50sp" />

    <RelativeLayout
        android:id="@+id/channelInfo"
        android:layout_width="match_parent"
        android:layout_height="175dip"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentTop="false"
        android:layout_margin="20dp"
        android:background="@color/BlackTransparent">

        <TextView
            android:id="@+id/current_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="99"
            android:layout_centerInParent="true"
            android:textColor="#FFF"
            android:textSize="50sp" />

        <ImageView
            android:id="@+id/channel_icon"
            android:layout_toEndOf="@+id/current_channel"
            android:layout_width="120dp"
            android:layout_marginStart="100dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:layout_centerInParent="true"
            android:contentDescription="@string/channel_ico"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/channel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#FFF"
            android:textSize="50sp" />

        <TextClock
            android:id="@+id/textClock"
            android:textSize="50sp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp" />

    </RelativeLayout>

</RelativeLayout>
